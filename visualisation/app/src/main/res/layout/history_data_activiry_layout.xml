<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:id="@+id/historyDataAR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.00"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:background="@color/FZIGrey"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_toEndOf="@+id/textView6"
            android:text="Windflow Frequency less than 20%"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView5"
            android:text="Windflow Frequency higher than 33%"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/textView5"
            android:text="Windflow Frequency between 20% and 33%"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#FF0000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:background="#FFFF00"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignParentStart="true"
            android:background="#0B6623"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/niki_logo"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView11"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/bws_logo"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/buttonGoLiveAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goLiveAr"
            android:text=" Go Live Ar" />
    </RelativeLayout>


</RelativeLayout>