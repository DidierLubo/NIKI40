<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9F9">

    <Button
        android:id="@+id/getData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get Data"

        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />

    <Button
        android:id="@+id/returnAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="resumeAR"
        android:text="Return to AR"
        android:layout_marginRight="69dp"
        android:layout_marginEnd="69dp"
        android:layout_alignBaseline="@+id/getData"
        android:layout_alignBottom="@+id/getData"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/sensorValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/returnAR"
        android:layout_alignStart="@+id/returnAR"
        android:layout_below="@+id/returnAR"
        android:layout_marginTop="77dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/sensorName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/getData"
        android:layout_alignStart="@+id/getData"
        android:layout_alignTop="@+id/sensorValue1"
        android:text="Sensor"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/sensorName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor"
        android:layout_below="@+id/sensorName1"
        android:layout_alignLeft="@+id/sensorName1"
        android:layout_alignStart="@+id/sensorName1"
        android:layout_marginTop="53dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/sensorValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sensorValue1"
        android:layout_alignStart="@+id/sensorValue1"
        android:layout_alignTop="@+id/sensorName2"
        android:textColor="#000000" />

</RelativeLayout>